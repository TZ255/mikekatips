<!-- Variables -->
<% title = 'Jisajili - MikekaTips' %>
<% description = 'Jisajili kupata akaunti ya MikekaTips ili kupata tips za kulipwa na za hali ya juu.' %>
<% keywords = 'register, jisajili, akaunti mpya, mikekatips, betting tips' %>
<% page = 'auth' %>

<main>
    <div class="container py-5" id="tgt-regcontainer">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5">
                        <!-- Header -->
                        <div class="text-center mb-4">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-person-plus display-6 text-success"></i>
                            </div>
                            <h2 class="fw-bold text-dark mb-2">Jisajili Sasa!</h2>
                            <p class="text-muted">Unda akaunti yako ya MikekaTips ili kupata tips za kulipwa</p>
                        </div>

                        <!-- Flash Messages -->
                        <%- include('../0-partials/flashMessages') %>

                        <!-- Google Sign In Button -->
                        <div class="d-grid gap-3">
                            <button id="googleSignInBtn" class="btn btn-success btn-lg py-3 rounded-3 shadow-sm" onclick="signInWithGoogle()">
                                <i class="bi bi-google me-2"></i>
                                <span>Jisajili kwa Google</span>
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <hr class="my-4">
                            <p class="text-muted mb-0">
                                Tayari una akaunti? 
                                <a href="/auth/login" class="text-primary text-decoration-none fw-semibold">
                                    Ingia hapa
                                </a>
                            </p>
                        </div>

                        <!-- Back to Home -->
                        <div class="text-center mt-4">
                            <a href="/" class="btn btn-outline-secondary btn-sm rounded-pill px-4">
                                <i class="bi bi-arrow-left me-1"></i>
                                Rudi Nyumbani
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Firebase Auth Script for Register -->
<%- include('extras/firebase-auth-register-script') %>