<!-- Variables -->
<% title = 'Ingia - MikekaTips' %>
<% description = 'Ingia kwenye akaunti yako ya MikekaTips ili kupata tips za kulipwa na za hali ya juu.' %>
<% keywords = 'login, ingia, akaunti, mikekatips, betting tips' %>
<% page = 'auth' %>
<% page_url = '' %>

<main>
    <div class="container py-5" id="tgt-regcontainer">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5">
                        <!-- Header -->
                        <div class="text-center mb-4">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-person-circle display-6 text-primary"></i>
                            </div>
                            <h2 class="fw-bold text-dark mb-2">Karibu Tena!</h2>
                            <p class="text-muted">Ingia kwenye akaunti yako ili kuona tips za kulipwa</p>
                        </div>

                        <!-- Flash Messages -->
                        <%- include('../0-partials/flashMessages') %>
                        
                        <!-- URL Error Messages -->
                        <% if (typeof query !== 'undefined' && query.error) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <%= query.error %>
                            </div>
                        <% } %>

                        <!-- Google Sign In Button -->
                        <div class="d-grid gap-3">
                            <button id="googleSignInBtn" class="btn btn-danger btn-lg py-3 rounded-3 shadow-sm" onclick="signInWithGoogle()">
                                <i class="bi bi-google me-2"></i>
                                <span>Ingia kwa Google</span>
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <hr class="my-4">
                            <p class="text-muted mb-0">
                                Huna akaunti? 
                                <a href="/auth/register" class="text-primary text-decoration-none fw-semibold">
                                    Jisajili hapa
                                </a>
                            </p>
                        </div>

                        <!-- Legal Links -->
                        <div class="text-center mt-3">
                            <p class="small text-muted mb-0">
                                <a href="/terms-of-service" class="text-muted text-decoration-none" target="_blank">
                                    Masharti ya Huduma
                                </a> 
                                | 
                                <a href="/privacy-policy" class="text-muted text-decoration-none" target="_blank">
                                    Sera ya Faragha
                                </a>
                            </p>
                        </div>

                        <!-- Back to Home -->
                        <div class="text-center mt-4">
                            <a href="/" class="btn btn-outline-secondary btn-sm rounded-pill px-4">
                                <i class="bi bi-arrow-left me-1"></i>
                                Rudi Nyumbani
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Firebase Auth Script -->
<%- include('extras/firebase-auth-script') %>