<!-- Variables -->
<% title = title %>
<% description = description %>
<% keywords = keywords %>
<% page = 'prediction' %>
<% page_url = `https://mikekatips.co.tz/prediction/${slug}` %>

<main>
    <!-- Breadcrumb -->
    <div class="bg-light py-3 border-bottom">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="/" class="text-decoration-none">
                            <i class="fa-solid fa-house"></i> Nyumbani
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/prediction" class="text-decoration-none">Predictions</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <%= title.length > 50 ? title.substring(0, 50) + '...' : title %>
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Article Header -->
                <div class="text-center mb-5">
                    <div class="d-flex flex-wrap justify-content-center gap-2 mb-3">
                        <span class="badge bg-success px-3 py-2 fs-6">
                            <i class="fa-solid fa-trophy me-1"></i>
                            <%= league %>
                        </span>
                        <span class="badge bg-primary px-3 py-2 fs-6">
                            <i class="fa-solid fa-calendar-days me-1"></i>
                            <span class="d-none d-sm-inline">
                                <%= new Date(date).toLocaleDateString('sw-TZ', { 
                                    weekday: 'long',
                                    day: '2-digit', 
                                    month: 'long',
                                    year: 'numeric'
                                }) %>
                            </span>
                            <span class="d-sm-none">
                                <%= new Date(date).toLocaleDateString('sw-TZ', { 
                                    day: '2-digit', 
                                    month: 'short',
                                    year: '2-digit'
                                }) %>
                            </span>
                        </span>
                        <span class="badge bg-info px-3 py-2 fs-6">
                            <i class="fa-solid fa-clock me-1"></i>
                            <%= time %>
                        </span>
                    </div>

                    <h1 class="display-5 fw-bold text-dark mb-4">
                        <%= title %>
                    </h1>

                    <p class="lead text-muted fs-5 mb-4">
                        <%= description %>
                    </p>

                    <!-- Odds & Affiliate -->
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card border-warning bg-warning bg-opacity-10 p-4 rounded-4">
                                <div class="text-center">
                                    <div class="h6 text-muted fw-bold mb-2"><%= tip?.toUpperCase() %></div>
                                    <div class="display-4 fw-bold text-warning mb-3">
                                        <%= odds %>
                                    </div>
                                    <div class="mb-3">
                                        <span class="badge bg-light text-dark px-3 py-2 fs-6">
                                            <%= affiliate?.toUpperCase() %>
                                        </span>
                                    </div>
                                    <button class="btn btn-warning btn-lg px-4 py-2 rounded-pill fw-semibold" onclick="window.open('/goto/<%= affiliate %>', '_blank')">
                                        BET NOW
                                        <i class="fa-solid fa-arrow-pointer ms-2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Article Content -->
                <div class="article-content">
                    <%- contentHtml %>
                </div>

                <!-- Other Today's Predictions, styling the list to shows the match time and date -->
                 <% if (other_predictions.length > 0) { %>
                  <div class="mt-5 pt-4 border-top">
                    <h3 class="mb-4 text-center">Predictions Zingine za <%= new Date(date).toLocaleDateString('sw-TZ', { 
                        day: '2-digit', 
                        month: 'long',
                        year: 'numeric'
                    }) %></h3>
                    <div class="list-group">
                        <% other_predictions.forEach(pred => { %>
                        <a href="/prediction/<%= pred.slug %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center link-primary">
                            <div>
                                <div class="fw-bold">Utabiri wa mechi ya <%= pred.match %></div>
                                <small class="text-muted">
                                    <i class="fa-solid fa-calendar-days me-1"></i>
                                    <%= new Date(pred.date).toLocaleDateString('sw-TZ', { 
                                        day: '2-digit', 
                                        month: 'short',
                                        year: '2-digit'
                                    }) %>
                                    &nbsp; | &nbsp;
                                    <i class="fa-solid fa-clock me-1"></i>
                                    <%= pred.time %>
                                </small>
                            </div>
                        </a>
                        <% }) %>
                    </div>
                 <% } %>

                <!-- Back to Predictions -->
                <div class="text-center mt-5 pt-4 border-top">
                    <a href="/prediction" class="btn btn-outline-primary btn-lg px-4 py-2 rounded-pill">
                        <i class="fa-solid fa-arrow-left me-2"></i>
                        Rudi Kwa Predictions
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Article Content Styles -->
<%- include('extras/article-style') %>
