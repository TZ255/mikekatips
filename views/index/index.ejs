<!-- Home Page Variables -->
<% if (page === "index") { %>
<% title = `Tips na Utabiri wa Mechi za Leo` %>
<% description = `Pata tips za soka zinazoshinda na odds za uhakika. Tips za uhakika, mikeka ya bure na mechi za leo. Code za mikeka ya leo pamoja na utabiri wa mechi za kesho` %>
<% } %>

<!-- Date Page Variables -->
<% if (["index-date", "index-jana", "index-kesho"].includes(page)) { %>
<% title = `Tips na Utabiri wa Mechi za ${swahiliDay} ${currentDateDisplay}` %>
<% description = `Pata tips za soka zinazoshinda za ${swahiliDay}. Tips za bure, VIP na Premium. Shinda mikeka ya ${swahiliDay} kwa kutumia tips zetu za bure` %>
<% } %>

<!-- General Variables -->
<% keywords = `betting tips ${swahiliDay.toLowerCase()}, soka, michezo, tanzania, tips za soka, mkeka wa leo, mikeka ya bure, codes za betpawa, mechi za ${currentDateDisplay}` %>
<% page = page %>
<% page_url = page_url %>

<main>
    <%- include('./extras/date-nav') %>

    <!-- Main Content -->
    <div class="container py-5">
        <!-- Hero Section -->
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold text-dark mb-3">
                Tips za <%= swahiliDay %>
            </h1>
            <p class="lead text-secondary fs-5">Pata tips na mikeka inayoshinda kila siku kutoka kwa wataalamu. Utabiri
                wa mechi za <%= swahiliDay.toLowerCase() %> <%= currentDateDisplay %></p>
            <div class="d-flex flex-column flex-md-row justify-content-center gap-2 mt-3">
                <a href="#free-tips" class="btn btn-outline-secondary btn-lg" style="min-width: 240px;">
                    <i class="fa-solid fa-gift me-2"></i>
                    Free Tips
                </a>
                <a href="/premium-tips" class="btn btn-warning btn-lg shadow-sm" style="min-width: 240px;">
                    <i class="fa-solid fa-crown me-2"></i>
                    Premium Tips
                </a>
            </div>
        </div>

        <!-- Free Tips -->
        <div class="bg-white rounded-4 shadow-sm p-3 p-md-4">
            <%- include('./extras/free-tips-tab') %>
        </div>

        <!-- SEO Content -->
        <%- include('./extras/seo-content') %>
    </div>
</main>