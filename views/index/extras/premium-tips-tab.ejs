<!-- Premium Tips Tab -->
<div class="tab-pane fade" id="premium-tips" role="tabpanel">
    <% if (!user) { %>
    <!-- Not logged in -->
    <div class="text-center py-5">
        <div class="card border-primary mx-auto" style="max-width: 400px;">
            <div class="card-body p-4">
                <i class="bi bi-lock-fill display-4 text-primary mb-3"></i>
                <h4 class="text-primary mb-3">Ingia Kuona Premium Tips</h4>
                <p class="text-muted mb-4">Jisajili au Ingia kwenye akaunti yako ili kuona premium tips zetu za leo</p>
                <a href="/auth/login" class="btn btn-primary btn-lg" up-follow>
                    <i class="bi bi-person-fill"></i>
                    Ingia Sasa
                </a>
            </div>
        </div>
    </div>
    <% } else if (!user.isPaid) { %>
    <!-- User logged in but not paid or subscription expired -->
    <div class="text-center py-5">
        <div class="card border-warning mx-auto" style="max-width: 400px;">
            <div class="card-body p-4">
                <i class="bi bi-credit-card-fill display-4 text-warning mb-3"></i>
                <h4 class="text-primary mb-3">Lipia Kuona Premium Tips</h4>
                <p class="text-muted mb-4">Lipia sasa ili kuona tips zetu (premium) zenye kiwango cha ushindi hadi 80%+
                </p>
                <div class="text-center mb-4">
                        <div class="d-flex justify-content-center align-items-center mb-2">
                            <span class="text-secondary text-decoration-line-through me-2">TSh 20,000</span>
                            <span class="h4 text-dark fw-bold mb-0">Tsh. 9,500</span>
                            <span class="text-success ms-2 fw-bold">/ Mwezi</span>
                        </div>
                        <small class="text-secondary">Punguzo la 50%</small>
                    </div>
                <a href="/payment" class="btn btn-warning btn-lg d-block px-4" up-follow>
                    <i class="bi bi-crown-fill"></i>
                    LIPIA SASA
                </a>
            </div>
        </div>
    </div>
    <% } else { %>
    <!-- User is paid - show premium tips -->
    <% if (premiumTips && premiumTips.length > 0) { %>
    <div class="row g-3">
        <% premiumTips.forEach(tip => { %>
        <div class="col-md-6 col-xl-4">
            <div class="card h-100 shadow-sm border-light">
                <div class="card-header bg-warning text-dark border-bottom text-center py-2">
                    <small class="fw-bold text-muted">
                        <i class="bi bi-coin me-1"></i>
                        Premium Tip
                    </small>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-clock me-2 text-muted"></i>
                        <span class="fw-semibold text-dark"><%= tip.time %></span>
                    </div>

                    <h6 class="card-title fw-bold text-dark mb-2">
                        <%= tip.match %>
                    </h6>

                    <p class="card-text text-muted small mb-3">
                        <i class="bi bi-trophy me-1"></i>
                        <%= tip.league %>
                    </p>

                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-warning text-dark px-3 py-2">
                            <%= tip.tip %>
                        </span>
                        <span class="fw-bold text-dark fs-5">
                            <%= tip.odds %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <% } else { %>
    <div class="text-center py-5">
        <i class="bi bi-crown-fill display-1 text-warning opacity-50"></i>
        <h4 class="text-muted mt-3">Hakuna tips za kulipwa kwa siku hii</h4>
        <p class="text-muted">Rudi baadaye au angalia tips za bure</p>
    </div>
    <% } %>
    <% } %>
</div>