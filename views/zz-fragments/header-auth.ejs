<% if (user) { %>
<div class="dropdown">
  <button id="authBtn" class="btn btn-ghost-light d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    <i class="fa-solid fa-circle-user"></i>
    <span><%= user.name || user.email %></span>
  </button>
  <ul class="dropdown-menu dropdown-menu-end shadow-sm" id="userDropdown">
    <li><h6 class="dropdown-header"><%= user.name || user.email %></h6></li>
    <li><hr class="dropdown-divider"></li>
    <li>
      <a class="dropdown-item" href="/auth/logout">
        <i class="fa-solid fa-right-from-bracket me-2"></i>
        Toka
      </a>
    </li>
  </ul>
</div>
<% } else { %>
<a href="/auth/login" class="btn btn-ghost-light">
  <i class="fa-solid fa-circle-user me-2"></i>
  Ingia
</a>
<% } %>
