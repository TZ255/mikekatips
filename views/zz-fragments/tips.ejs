<% if (freeTips && freeTips.length > 0) { %>
<% freeTips.forEach((tip, index) => { %>
<div class="col-md-6 col-xl-4 trans_this" style="animation-delay: <%= index * 0.1 %>s;">
    <div class="card h-100 shadow-sm border-light">
        <div class="card-header bg-light border-bottom text-center py-2">
            <small class="fw-semibold text-muted">
                <i class="fa-solid fa-gift me-1"></i>
                Free Tip
            </small>
        </div>
        <div class="card-body p-3">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-clock me-2 text-muted"></i>
                    <span class="fw-semibold text-dark"><%= tip.time %></span>
                </div>
                <span class="text-muted small"><%= new Date(tip.date).toLocaleDateString('sw-TZ', {day: '2-digit', month: '2-digit', year: 'numeric'}) %></span>
            </div>

            <div class="card-title fw-bold text-dark mb-2">
                <%= tip.match %>
            </div>

            <p class="card-text text-muted small mb-3">
                <i class="fa-solid fa-trophy me-1"></i>
                <%= tip.league %>
            </p>

            <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-secondary text-white px-3 py-2">
                    <%= tip.tip %>
                </span>
                <span class="fw-bold text-dark fs-5">
                    <%= tip.odds %>
                </span>
            </div>
        </div>
    </div>
</div>
<% }); %>
<% } else { %>
<div class="col-12 text-center mt-3">
    <hr>
</div>
<% } %>

<script>
    // Trigger animation when fragment loads
    setTimeout(() => {
        document.querySelectorAll('.trans_this').forEach((el, index) => {
            setTimeout(() => {
                el.classList.add('show');
            }, index * 100);
        });
    }, 50);
</script>