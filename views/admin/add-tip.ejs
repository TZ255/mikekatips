<!-- Variables -->
<% title = title || 'Add New Tip - Admin' %>
<% description = 'Add a new betting tip to the system' %>
<% keywords = '' %>
<% page = 'admin' %>
<% currentPage = 'add-tip' %>

<main>
    <%- include('./extras/admin-nav') %>

    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="bi bi-plus-circle"></i>
                            Add New Tip
                        </h4>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/admin/tips/add">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="match" class="form-label">Match</label>
                                    <input type="text" class="form-control" id="match" name="match" required
                                        placeholder="e.g., Manchester United vs Liverpool">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="league" class="form-label">League</label>
                                    <input type="text" class="form-control" id="league" name="league" required
                                        placeholder="e.g., Premier League">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="tip" class="form-label">Tip</label>
                                    <input type="text" class="form-control" id="tip" name="tip" required
                                        placeholder="e.g., Over 2.5 Goals">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="odds" class="form-label">Odds</label>
                                    <input type="text" class="form-control" id="odds" name="odds" required
                                        placeholder="e.g., 1.85">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="date" class="form-label">Date</label>
                                    <input type="date" class="form-control" id="date" name="date" required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="time" class="form-label">Time</label>
                                    <input type="time" class="form-control" id="time" name="time" required>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="isPremium" class="form-label">Type</label>
                                    <select class="form-select" id="isPremium" name="isPremium" required>
                                        <option value="false">Free Tip</option>
                                        <option value="true">Premium Tip</option>
                                    </select>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/admin" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i>
                                    Back to Dashboard
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i>
                                    Add Tip
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- By Uploading File -->
            <div class="col-lg-8 mt-5">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="bi bi-plus-circle"></i>
                            Upload BettingTipsters
                        </h4>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/admin/tips/add/bettingtipsters" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="date" class="form-label">Date (YYYY-MM-DD)</label>
                                    <input type="date" class="form-control" id="date2" name="date2" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="htmfile" class="form-label">HTML File (.htm)</label>
                                    <input type="file" class="form-control" id="htmfile" name="htmfile"
                                        accept=".htm,.html" required>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/admin" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i>
                                    Back to Dashboard
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i>
                                    Add Tips
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    document.getElementById('date').valueAsDate = new Date();
</script>