<!-- Variables -->
<% title = title || 'Admin Dashboard - MikekaTips' %>
<% description = 'Admin dashboard for managing betting tips and users' %>
<% keywords = '' %>
<% page = 'admin' %>
<% currentPage = 'dashboard' %>
<% page_url = '' %>

<main>
    <%- include('./extras/admin-nav') %>
    
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">Dashboard</h1>
                <p class="text-muted mb-0">Tips for <%= currentDate %></p>
            </div>
            <a href="/admin/tips/add" class="btn btn-primary">
                <i class="fa-solid fa-circle-plus"></i> Add New Tip
            </a>
        </div>
            
        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <div class="text-success fs-1 mb-2"><i class="fa-solid fa-gift"></i></div>
                        <div class="fs-3 fw-bold text-dark"><%= tips.filter(tip => !tip.isPremium).length %></div>
                        <div class="text-muted small">Free Tips Today</div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <div class="text-warning fs-1 mb-2"><i class="fa-solid fa-crown"></i></div>
                        <div class="fs-3 fw-bold text-dark"><%= tips.filter(tip => tip.isPremium).length %></div>
                        <div class="text-muted small">Premium Tips Today</div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <div class="text-success fs-1 mb-2"><i class="fa-solid fa-circle-check"></i></div>
                        <div class="fs-3 fw-bold text-dark"><%= tips.filter(tip => tip.status === 'won').length %></div>
                        <div class="text-muted small">Won Tips</div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <div class="text-danger fs-1 mb-2"><i class="fa-solid fa-circle-xmark"></i></div>
                        <div class="fs-3 fw-bold text-dark"><%= tips.filter(tip => tip.status === 'lost').length %></div>
                        <div class="text-muted small">Lost Tips</div>
                    </div>
                </div>
            </div>
        </div>
            
        <!-- Today's Tips -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h2 class="h5 mb-0">Today's Tips</h2>
            </div>
                
            <% if (tips.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Time</th>
                                <th>Match</th>
                                <th>League</th>
                                <th>Tip</th>
                                <th>Odds</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tips.forEach(tip => { %>
                            <tr>
                                <td><%= tip.time %></td>
                                <td class="fw-bold"><%= tip.match %></td>
                                <td class="text-muted"><%= tip.league %></td>
                                <td><%= tip.tip %></td>
                                <td class="text-primary fw-bold"><%= tip.odds %></td>
                                <td>
                                    <span class="badge bg-<%= tip.isPremium ? 'warning' : 'success' %>">
                                        <%= tip.isPremium ? 'PREMIUM' : 'FREE' %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-<%= tip.status === 'won' ? 'success' : tip.status === 'lost' ? 'danger' : 'secondary' %>">
                                        <%= tip.status ? tip.status.toUpperCase() : 'PENDING' %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/tips/edit/<%= tip._id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="fa-solid fa-pencil"></i>
                                        </a>
                                        <form method="post" action="/admin/tips/delete/<%= tip._id %>" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="card-body text-center py-5">
                    <div class="fs-1 mb-3 opacity-50 text-muted"><i class="fa-solid fa-clipboard-list"></i></div>
                    <h3 class="h5 mb-2">No Tips for Today</h3>
                    <p class="text-muted mb-3">Start by adding some tips for today's matches</p>
                    <a href="/admin/tips/add" class="btn btn-primary">Add First Tip</a>
                </div>
            <% } %>
        </div>
    </div>
</main>