<!-- Variables -->
<% title = 'Manage Predictions - Admin' %>
<% description = 'Admin panel for managing predictions' %>
<% keywords = 'admin, predictions, manage' %>
<% page = 'admin' %>
<% currentPage = 'predictions' %>

<main>
    <%- include('./extras/admin-nav') %>

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">Manage Predictions</h1>
                <p class="text-muted mb-0">All predictions in the system</p>
            </div>
            <a href="/admin/predictions/add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Prediction
            </a>
        </div>

        <div class="card border-0 shadow-sm">
            <% if (predictions && predictions.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>League</th>
                                <th>Date</th>
                                <th>Odds</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% predictions.forEach(prediction => { %>
                            <tr>
                                <td class="fw-bold"><%= prediction.title %></td>
                                <td class="text-muted"><%= prediction.league %></td>
                                <td><%= new Date(prediction.date).toLocaleDateString() %> <%= prediction.time %></td>
                                <td class="text-primary fw-bold"><%= prediction.odds %></td>
                                <td>
                                    <span class="badge bg-<%= prediction.status === 'published' ? 'success' : 'secondary' %>">
                                        <%= (prediction.status || 'draft').toUpperCase() %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/predictions/edit/<%= prediction._id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="/admin/predictions/delete/<%= prediction._id %>" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="card-body text-center py-5">
                    <div class="fs-1 mb-3 opacity-50 text-muted"><i class="bi bi-graph-up-arrow"></i></div>
                    <h3 class="h5 mb-2">No Predictions</h3>
                    <p class="text-muted mb-3">Start by adding some predictions</p>
                    <a href="/admin/predictions/add" class="btn btn-primary">Add First Prediction</a>
                </div>
            <% } %>
        </div>
    </div>
</main>