<!-- Variables -->
<% title = 'Add New Prediction - Admin' %>
<% description = 'Admin panel for adding new predictions' %>
<% keywords = 'admin, prediction, add' %>
<% page = 'admin' %>
<% currentPage = 'add-prediction' %>
<% page_url = '' %>

<main>
    <%- include('./extras/admin-nav') %>

    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="bi bi-plus-circle"></i>
                            Add New Prediction
                        </h4>
                    </div>
                    <div class="card-body">
                        <%- include('../0-partials/flashMessages') %>

                        <form action="/admin/predictions/add" method="POST">
                            <!-- Affiliate Betting Site -->
                            <div class="mb-4">
                                <label for="affiliate" class="form-label fw-semibold">Recommended Betting Site</label>
                                <select class="form-select" id="affiliate" name="affiliate">
                                    <option value="betway">Betway</option>
                                    <option value="gsb">GSB</option>
                                    <option value="leonbet">LeonBet</option>
                                    <option value="betwinner">BetWinner</option>
                                    <option value="1xbet">1xBet</option>
                                    <option value="melbet">MelBet</option>
                                </select>
                                <small class="text-muted">Select the recommended betting site for this prediction</small>
                            </div>

                            <!-- Article Body -->
                            <div class="mb-4">
                                <label for="body" class="form-label fw-semibold">Article Body (HTML) *</label>
                                <textarea class="form-control" id="body" name="html" rows="10" required placeholder="Write your prediction analysis here. You can use basic HTML tags like <h2>, <p>, <strong>, <ul>, <li>, etc."></textarea>
                                <small class="text-muted">
                                    Basic HTML allowed: h1, h2, h3, h4, p, strong, em, ul, ol, li, blockquote, br
                                </small>
                            </div>

                            <!-- Submit Buttons -->
                            <div class="d-flex gap-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Create Prediction
                                </button>
                                <a href="/admin/predictions" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-x-circle me-2"></i>
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    // Snippet text counter
    const snippetText = document.getElementById('snippet_text');
    const snippetCount = document.getElementById('snippet-count');
    
    snippetText.addEventListener('input', function() {
        snippetCount.textContent = this.value.length;
        if (this.value.length > 180) {
            snippetCount.style.color = 'red';
        } else {
            snippetCount.style.color = '';
        }
    });

    // Description counter
    const description = document.getElementById('description');
    const descCount = document.getElementById('desc-count');
    
    description.addEventListener('input', function() {
        descCount.textContent = this.value.length;
        if (this.value.length > 150) {
            descCount.style.color = 'red';
        } else {
            descCount.style.color = '';
        }
    });

    // Auto-focus title field
    document.getElementById('title').focus();
</script>