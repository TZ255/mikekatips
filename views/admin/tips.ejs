<!-- Variables -->
<% title = title || 'Manage Tips - Admin' %>
<% description = 'Admin panel for managing all betting tips' %>
<% keywords = 'admin, tips management, betting tips' %>
<% page = 'admin' %>
<% currentPage = 'tips' %>

<main>
    <%- include('./extras/admin-nav') %>
    
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">All Tips</h1>
                <p class="text-muted mb-0">Manage all betting tips in the system</p>
            </div>
            <a href="/admin/tips/add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Tip
            </a>
        </div>

        <%- include('../0-partials/flashMessages') %>

        <div class="card border-0 shadow-sm">
            <% if (tips.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Match</th>
                                <th>League</th>
                                <th>Tip</th>
                                <th>Odds</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tips.forEach(tip => { %>
                            <tr>
                                <td><%= tip.date %></td>
                                <td><%= tip.time %></td>
                                <td class="fw-bold"><%= tip.match %></td>
                                <td class="text-muted"><%= tip.league %></td>
                                <td><%= tip.tip %></td>
                                <td class="text-primary fw-bold"><%= tip.odds %></td>
                                <td>
                                    <span class="badge bg-<%= tip.isPremium ? 'warning' : 'success' %>">
                                        <%= tip.isPremium ? 'PREMIUM' : 'FREE' %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-<%= tip.status === 'won' ? 'success' : tip.status === 'lost' ? 'danger' : 'secondary' %>">
                                        <%= tip.status ? tip.status.toUpperCase() : 'PENDING' %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/tips/edit/<%= tip._id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="/admin/tips/delete/<%= tip._id %>" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this tip?')">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <div class="card-footer bg-white">
                        <nav>
                            <ul class="pagination justify-content-center mb-0">
                                <% if (currentPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/admin/tips?page=<%= currentPage - 1 %>">Previous</a>
                                    </li>
                                <% } %>
                                
                                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="/admin/tips?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>
                                
                                <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/admin/tips?page=<%= currentPage + 1 %>">Next</a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                <% } %>
            <% } else { %>
                <div class="card-body text-center py-5">
                    <div class="fs-1 mb-3 opacity-50 text-muted"><i class="bi bi-clipboard2-data"></i></div>
                    <h3 class="h5 mb-2">No Tips Found</h3>
                    <p class="text-muted mb-3">Start by adding some betting tips to the system</p>
                    <a href="/admin/tips/add" class="btn btn-primary">Add First Tip</a>
                </div>
            <% } %>
        </div>
    </div>
    
</main>