<!-- Variables -->
<% title = 'Malipo - Premium Tips' %>
<% description = 'Lipia na upate tips za soka za hali ya juu. M-Pesa, Tigo Pesa na njia nyingine za malipo.' %>
<% keywords = "malipo, tips za kulipwa, M-Pesa, Tigo Pesa, betting tips premium, mikekatips" %>
<% page = "payment" %>
<% page_url = '' %>

<main>
    <div class="bg-light py-5">
        <div class="container">
            <div class="text-center">
                <h1 class="display-5 fw-bold text-dark mb-3">
                    <i class="bi bi-crown-fill text-warning me-3"></i>
                    Tips za Kulipwa
                </h1>
                <p class="lead text-secondary fs-5">Lipia na upate tips za hali ya juu na za kwanza</p>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Pricing Card -->
                <div class="card border-warning shadow-lg mb-5">
                    <div class="card-header bg-warning text-dark text-center py-4">
                        <h3 class="mb-0 fw-bold">
                            <i class="bi bi-crown-fill me-2"></i>
                            MikekaTips Premium
                        </h3>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <h2 class="display-4 fw-bold text-primary">
                                Tsh 9,500
                                <small class="text-muted fs-5">/ Mwezi</small>
                            </h2>
                            <p class="text-muted">Premium tips kwa mwezi mzima</p>
                        </div>

                        <!-- Features List -->
                        <div class="row g-4 mb-5 ps-2">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-success me-2 fs-4"></i>
                                    <span class="fw-medium">Premium tips 10+ kila siku</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-success me-2 fs-4"></i>
                                    <span class="fw-medium">Kiwango cha ushindi 85%+</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-success me-2 fs-4"></i>
                                    <span class="fw-medium">Uchambuzi wa kina</span>
                                </div>
                            </div>
                        </div>

                        <!-- Onyo -->
                        <!-- <div class="alert alert-info alert-dismissible text-start" style="font-size: 0.7rem;">
                            Kumbuka, sisi sio wachawi na hakuna <b>tips za 100% uhakika</b>. Lipia ukijua kwamba kuna
                            uwezekano wa kupoteza.
                        </div> -->
                    </div>
                </div>

                <!-- Payment Form -->
                <div class="card border-0 mb-5 shadow-lg">
                    <div class="card-header bg-gradient bg-light border-0 py-4 text-center">
                        <h3 class="fw-bold mb-1">
                            <i class="bi bi-credit-card me-2 text-primary"></i>Lipa Kwa Mobile Money
                        </h3>
                        <p class="text-muted mb-0">Ingiza namba ya simu kulipia</p>
                    </div>

                    <div class="card-body p-3">
                        <form id="paymentForm">
                            <!-- Hidden Alert for json Messages -->
                            <div id="paymentMessageArea" class="mb-4" style="display: none;">
                                <div id="paymentAlert" class="alert rounded-4" role="alert"></div>
                            </div>

                            <!-- Hidden Alert for req.flash Messages -->
                            <%- include('../0-partials/flashMessages'); %>

                            <!-- Phone Number Input -->
                            <div class="mb-4">
                                <label for="phoneNumber" class="form-label fw-bold fs-6">
                                    <i class="bi bi-phone me-2 text-success"></i>Namba ya Simu
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-secondary fw-bold text-light border-success fs-5">
                                        +255
                                    </span>
                                    <input type="text" class="form-control border-success fs-5 text-start"
                                        id="phoneNumber" name="phoneNumber" placeholder="712345678" maxlength="9"
                                        required pattern="[0-9]{9}" title="Ingiza namba ya simu sahihi"
                                        inputmode="numeric" style="letter-spacing: 2px;">
                                </div>
                                <div class="form-text mt-2">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Tigo, Airtel na Halotel Pekee.
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center mb-4">
                                <button type="submit" class="btn btn-success btn-lg px-5 py-3 rounded-pill shadow"
                                    id="paymentSubmitBtn">
                                    <i class="bi bi-send me-2"></i>Tuma Ombi la Malipo
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Why Choose Us Section -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <h3 class="text-center fw-bold text-dark mb-5">
                            <i class="bi bi-star-fill text-warning me-2"></i>
                            Kwa Nini Uchague MikekaTips?
                        </h3>

                        <div class="row g-4">
                            <div class="col-md-4 text-center">
                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                    style="width: 80px; height: 80px;">
                                    <i class="bi bi-graph-up-arrow fs-2"></i>
                                </div>
                                <h5 class="fw-bold">Kiwango cha Juu cha Ushindi</h5>
                                <p class="text-muted">Premium tips zetu zina kiwango cha ushindi cha zaidi ya 85% kila
                                    siku.</p>
                            </div>

                            <div class="col-md-4 text-center">
                                <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                    style="width: 80px; height: 80px;">
                                    <i class="bi bi-people-fill fs-2"></i>
                                </div>
                                <h5 class="fw-bold">Wataalamu wenye Uzoefu</h5>
                                <p class="text-muted">Timu yetu ina uzoefu wa miaka mingi katika uchambuzi wa michezo ya
                                    soka.</p>
                            </div>

                            <div class="col-md-4 text-center">
                                <div class="bg-warning text-dark rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                    style="width: 80px; height: 80px;">
                                    <i class="bi bi-headset fs-2"></i>
                                </div>
                                <h5 class="fw-bold">Msaada wa 24/7</h5>
                                <p class="text-muted">Tupo hapa kukusaidia muda wote, siku na usiku.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Payment Confirmation Modal -->
<%- include('./extras/modal-payment'); %>

<!-- Payment Confirmation Modal Script -->
<%- include('./extras/modal-payment-script'); %>