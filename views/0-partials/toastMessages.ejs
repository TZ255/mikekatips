<% if (messages && messages.error) { %>
<div class="toast-container flash-toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
  <div id="liveToast" class="toast text-bg-danger" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body text-white">
      <%= messages.error %>
    </div>
  </div>
</div>
<% } %>

<% if (messages && messages.success) { %>
<div class="toast-container flash-toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
  <div id="liveToast" class="toast text-bg-success" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body text-white">
      <%= messages.success %>
    </div>
  </div>
</div>
<% } %>

<% if (messages && messages.info) { %>
<div class="toast-container flash-toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
  <div id="liveToast" class="toast text-bg-info" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body text-white">
      <%= messages.info %>
    </div>
  </div>
</div>
<% } %>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    const els = document.querySelectorAll('.toast');
    els.forEach((el) => {
      console.log('Showing toast message', el.textContent);
      new bootstrap.Toast(el, {
        autohide: true,
        delay: Number(el.dataset.bsDelay) || 3500
      }).show();
    });
  });
</script>